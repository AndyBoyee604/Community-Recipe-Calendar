<section>
  <h2 class="title is-4 has-text-weight-medium has-text-black is-italic">Complete the Form Below to Share a New Recipe</h2>
<br>
  <form class="new-post-form">
    <div>
      <label for="post-title" class="subtitle is-5 has-text-weight-medium has-text-grey-dark">Title</label>
      <input type="text" id="post-title" name="post-title" class="input is-dark is-focused has-text-grey" placeholder="Add Recipe Name Here..." />
    </div>
    <br>
    <div>
      <label for="post-url" class="subtitle is-5 has-text-weight-medium has-text-grey-dark">Link</label>
         <input id="post-url" name="comment-body" class="input is-dark is-focused has-text-grey" placeholder="Add Recipe Link Here.." name="post-url"></textarea>
    </div>
    <br>
  
    <button type="submit" class="btn button has-background-primary has-text-white">Share</button>
  </form>
</section>
<br>
<br>
{{#if posts.length}}
<section>
    <p class="title is-4 has-text-black has-text-weight-medium has-text-centered-fullhd is-italic is-family-primary">View List of Shared Recipes Below</p>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a id="edit-btn" href="/dashboard/edit/{{post.id}}" class="button is-small is-italic is-primary is-outlined has-text-grey-dark has-text-weight-medium">Edit Recipe</a>
    </li>
    {{/each}}
    <br>
  </ol>
</section>
{{/if}}




