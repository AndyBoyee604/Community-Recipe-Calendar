<section>
  <h2>Share a Recipe</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn">Share</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Recipe</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Recipe</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<article>
  <h2> Create a Recipe</h2>
  <form class="recipe-form">
    <div>
        <p><strong>Title of Recipe:</strong><br>
        <input type="text" name="recipe-owner">
        <p><strong>Description:</strong><br>
        <input type="text" name="recipe-description">
        <p><strong>Ingredients:</strong><br>
        <textarea name="recipe-ingredients"></textarea>
        <P><strong>Instructions:</strong><br>
        <textarea name="recipe-instructions"></textarea>
        <P><input type="submit" name="submit" value="Add Recipe"></p>
    </div>
  </form>
</article>

<script src="/javascript/add-post.js"></script>