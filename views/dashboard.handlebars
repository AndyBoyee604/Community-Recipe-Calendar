<br>
<section>
  <h2 class="title is-4 has-text-weight-medium has-text-black is-italic">Complete the Form Below to Share a New Recipe</h2>
<br>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <br>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url"/>
    </div>
    <br>
  
    <button type="submit" class="btn button has-background-primary has-text-white">Share</button>
  </form>
</section>
<br>

{{#if posts.length}}
<section>
    <p class="title is-4 has-text-dark has-text-weight-medium has-text-centered-fullhd is-italic is-family-primary">View List of Shared Recipes Below</p>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link has-background-warning-light is-italic has-text-danger-dark">Edit Recipe</a>
    </li>
    {{/each}}
    <br>
  </ol>
</section>
{{/if}}




<script src="/public/javascript/add-post.js"></script>