<form class="login-form">
  <div>
    <p class="has-text-weight-medium has-text-black is-italic">Please Login
      Below:</p>
    <br />
    <label for="username-login">Username:</label>
    <input
      type="text"
      id="username-login"
      name="username-login"
      class="input is-success is-focused has-text-grey"
      placeholder="Enter Username..."
    />
  </div>
  <br>
  <div>
    <label for="password-login">Password:</label>
    <input
      type="password"
      id="password-login"
      name="password-login"
      class="input is-success is-focused has-text-grey"
      placeholder="Enter Password..."
    />
  </div>
  <br />
  <div>
    <button type="submit" class="button is-success is-small">Login</button>
  </div>
</form>
<br />
<form class="signup-form">
  <div>
    <p class="has-text-weight-medium has-text-black is-italic">No Login? No
      Problem! Sign Up Below:</p>
    <br />
    <p>
    <label for="username-signup">Username:</label>
    <input
      type="text"
      id="username-signup"
      name="username-signup"
      class="input is-success is-focused has-text-grey"
      placeholder="Create Username..."
    />
    </p>
  </div>
  </form>
  <br>
  <div>
    <label for="password-signup">Password:</label>
    <input
      type="password"
      id="password-signup"
      name="username-signup"
      class="input is-success is-focused has-text-grey"
      placeholder="Create Password..."
    />
  </div>
  <br />
  <div>
    <button type="submit" class="button is-success is-small">Sign-up</button>
  </div>
</form>
<br />
<br />
</div>

