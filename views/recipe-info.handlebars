<br>
<section>
  <h2 class="has-text-weight-medium is-size-6 has-text-black is-italic">Complete the Form Below to Add a New Recipe</h2>
<br>
<div class="columns is-centered">
  <div id="recipe-card" class="column is-half">

 <form class="new-recipe-form align-items">
  <div id="recipe-results" class="div has py-4">
   <div class="card is-centered">
       <p class="p has-background-warning has-text-centered-fullhd"><strong class="strong has-text-primary ">Title</strong><br>
       <input type="text" name="recipe_title">
       <p class="p has-background-warning has-text-centered-fullhd"><strong class="strong has-text-primary ">Description</strong><br>
       <input type="text" name="description">
        <p class="p has-background-warning has-text-centered-fullhd"><strong class="strong has-text-primary ">Ingredients</strong><br>
       <textarea name="ingredients"></textarea>
       <p class="p has-background-warning has-text-centered-fullhd"><strong class="strong has-text-primary ">Instructions</strong><br>
       <textarea name="instructions"></textarea>
       <br>
   </div>
   <br>
   
   <button type="submit" class="btn button has-background-primary has-text-white">Create</button>
  </div>
 </form>

  </div>
</div>
</section>
<br>

<div>
{{#if recipes.length}}
<article>
{{#each recipes as |recipe|}}
<div>
    {{> recipes recipe }}
</div>
{{/each}}
</article>
<div>
{{/if}}

<a href="/recipe"> &uarr; Back to the top</a>


<script src="/public/javascript/add-recipe.js"></script>
